<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.finalcad.recyclerviewheaderplayground">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".motionlayout.MotionLayoutActivity"
            android:label="@string/motion_layout" />

        <activity
            android:name=".mergeadapter.MergeAdapterActivity"
            android:label="@string/merge_adapter" />

        <activity
            android:name=".coordinatorlayout.CoordinatorLayoutActivity"
            android:label="@string/coordinator_layout" />
    </application>

</manifest>